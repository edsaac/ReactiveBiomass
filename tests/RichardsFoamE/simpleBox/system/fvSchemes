FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    //default         Euler;
    default         CrankNicolson 0.9;
}

gradSchemes
{
    default 	    cellLimited leastSquares 1.0;;
    grad(h)         cellLimited leastSquares 1.0;
}

divSchemes
/* Using Minmod scheme to avoid oscilations 
   https://www.openfoam.com/documentation/guides/latest/doc/guide-schemes-divergence-example.html
   By default, use Gauss linearUpwind grad(variable);
*/
{
    default                   none;
//    div(phi,suspendedClay)    Gauss Minmod;
}

laplacianSchemes
{
    default         Gauss linear corrected;
}

interpolationSchemes
{
    default         linear;
}

snGradSchemes
{
    default         corrected;
}


