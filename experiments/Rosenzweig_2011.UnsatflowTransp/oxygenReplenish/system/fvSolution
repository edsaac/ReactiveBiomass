FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    h
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-10;
        relTol          0;
    }

    "(DOC|POC|O2|NO3|NH4|XI|EPS|UAP|BAP|POCr|XARp|XNp|XDNp|tracer)"
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-09;
        relTol          0;
    }

    "(XAR|XN|XDN)"
    {
        solver          PBiCGStab;
        preconditioner  DIC;
        tolerance       1e-09;
        relTol          0;
    }

}

SIMPLE
{
    nNonOrthogonalCorrectors 1;
}

timeStepping
{
    convergeThreshold   5.0E-06;
    maxItersToConverge  10;  // Triggers dT down

    UpDeltaT_nIters     3;   // Triggers dT up
    UpDeltaT_Factor     1.1;
    maxDeltaT           30;

    DownDeltaT_Factor   0.5;
    minDeltaT           0.0001;      
}

