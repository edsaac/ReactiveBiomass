FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0.000";
    object      NH4;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [ 1 -3 0 0 0 0 0 ];

internalField   uniform 0.100; // Pick a high value that ensures N is available

boundaryField
{
    front
    {
        type            empty;
    }
    back
    {
        type            empty;
    }
    right
    {
        type            empty;
    }
    left
    {
        type            empty;
    }
    top
    {
        type                uniformInletOutlet;
        uniformInletValue   constant 0.100;
        phi                 phi;
    }
    bottom
    {
        type            zeroGradient;
    }
}


